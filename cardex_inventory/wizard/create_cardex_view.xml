<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<!-- customize cardex wizard form view -->
    <record id="creat_cardex_view_form" model="ir.ui.view">
        <field name="name">creat.cardex.view.form</field>
        <field name="model">creat.cardex.wizard</field>
        <field name="arch" type="xml">
            <form string="Criterion Date">
                <group class="oe_title">
                    <field name="criterion_date"/>
                    <field name="inv_location"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="product_ids"/>
                </group>
                <footer>
                    <button name="reload_move_line" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</data>
</odoo>